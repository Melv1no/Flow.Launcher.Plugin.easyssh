<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Meta plugin -->
    <system:String x:Key="plugin_easyssh_plugin_name">EasySSH</system:String>
    <system:String x:Key="plugin_easyssh_plugin_description">Enregistrez et lancez des commandes SSH depuis Flow Launcher.</system:String>

    <!-- Messages d’état -->
    <system:String x:Key="plugin_easyssh_sshnotinstalled_title">EasySSH</system:String>
    <system:String x:Key="plugin_easyssh_sshnotinstalled_subtitle">Client OpenSSH introuvable sur ce système.</system:String>

    <system:String x:Key="plugin_easyssh_databasenotcreated_title">EasySSH</system:String>
    <system:String x:Key="plugin_easyssh_databasenotcreated_subtitle">Impossible de créer la base des profils.</system:String>

    <!-- Par défaut / aide -->
    <system:String x:Key="plugin_easyssh_subtitle_default">Tapez : add ; remove ; profiles|p ; direct|d ; shell ; docs</system:String>

    <!-- AJOUT -->
    <system:String x:Key="plugin_easyssh_title_commandadd">Ajouter un profil</system:String>
    <system:String x:Key="plugin_easyssh_subtitle_commandadd">Usage : add &lt;nom&gt; ssh user@host</system:String>

    <!-- SUPPRESSION -->
    <system:String x:Key="plugin_easyssh_title_commandremove">Supprimer un profil</system:String>
    <system:String x:Key="plugin_easyssh_subtitle_commandremove">Sélectionnez un profil à supprimer.</system:String>

    <!-- PROFILS -->
    <system:String x:Key="plugin_easyssh_title_commandprofiles">Profils enregistrés</system:String>
    <system:String x:Key="plugin_easyssh_subtitle_commandprofiles">Sélectionnez un profil pour vous connecter.</system:String>

    <!-- CONNEXION DIRECTE -->
    <system:String x:Key="plugin_easyssh_subtitle_commanddirectconnect">Connexion directe :</system:String>

    <system:String x:Key="plugin_easyssh_title_commandshell_add">Ajouter un profil shell</system:String>
    <system:String x:Key="plugin_easyssh_subtitle_commandshell_add_usage">Usage : shell add "&quot;C:\Chemin\MonClientSsh.exe&quot;" "&quot;--port {{port}} --host {{host}} --user {{user}}&quot;"</system:String>

    <system:String x:Key="plugin_easyssh_title_commandshell_remove">Supprimer un profil shell</system:String>
    <system:String x:Key="plugin_easyssh_subtitle_commandshell_remove">Sélectionnez un profil shell à supprimer.</system:String>

    <system:String x:Key="plugin_easyssh_subtitle_commandshell_help">Utilisez : shell add "exe" "template"  •  shell remove</system:String>

</ResourceDictionary>
